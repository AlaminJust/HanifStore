<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HanifStore</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Bentham|Playfair+Display|Raleway:400,500|Suranna|Trocchi">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/login.js"></script>
    <script src="~/js/category.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/role.js"></script>
    <script src="~/js/order-service.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HanifStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_navberList.cshtml");}
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (signInManager.IsSignedIn(User))
                        {
                            await Html.RenderPartialAsync("~/Views/Shared/_navbarSignInNaveLink.cshtml");
                        }
                        else
                        {
                            <li class="nav-item mr-2">
                                <input id="username" type="text" class="nav-link form-control" placeholder="Username" />
                            </li>
                            <li class="nav-item mr-2">
                                <input id="password" type="password" class="nav-link form-control" placeholder="Password" />
                            </li>
                            <li class="nav-item">
                                <button id="login" class="nav-link btn btn-primary" onclick="user.login();">Login</button>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark sign-up" asp-controller="Users" asp-action="Registration"> SignUp </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - HanifStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("renderScript", required: false)
    @RenderSection("Popup", required: false)
    @RenderSection("regesterEvent", required: false)
    @RenderSection("renderTransactionScript", required: false)
    @RenderSection("renderCategorylistScript", required: false)
    @RenderSection("renderProductList", required: false)
    @RenderSection("renderRoleControlList", required: false)
</body>
</html>
