@model IEnumerable<UsersInformation>

<table id="table_id" class="table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>User name</th>
            <th>Phone number</th>
            <th>Village</th>
            <th>Father name</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName  @user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.VillageName</td>
                <td>@user.FatherName</td>
                <td>@user.Amount</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>User name</th>
            <th>Phone number</th>
            <th>Village</th>
            <th>Father name</th>
            <th>Amount</th>
        </tr>
    </tfoot>
</table>
@section renderScript{
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
